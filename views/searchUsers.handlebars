<h1>Search Users</h1>

{{#if error}}
<span>{{error}}</span>
{{/if}}

<form method="POST" action="/user/search" class="form-inline">
    <div class="form-group">
        <input type="text" name="id" class="form-control" placeholder="Search users for ID">
    </div>
    <input type="submit" class="btn btn-danger ml-sm-3" value="Search">
</form>